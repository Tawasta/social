<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mail_mass_mailing_form" model="ir.ui.view">
        <field name="name">mail.mass_mailing.form.mail.server</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form"/>
        <field name="arch" type="xml">

            <label for="mailing_model" position="before">
                <field name="mail_server_id" groups="base.group_no_one" options="{'no_create': True, 'no_open': True}"
                    attrs="{'readonly': [('state', 'in', ('sending', 'done'))]}"/>
            </label>
        </field>
    </record>
</odoo>
