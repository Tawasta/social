<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="base_config_settings_view_form" model="ir.ui.view">
        <field name="name">base.config.settings.view.form</field>
        <field name="model">base.config.settings</field>
        <field name="inherit_id" ref="base_setup.view_general_configuration"/>
        <field name="arch" type="xml">

            <div name="email" position="inside">
                <div>
                    <label for="autosubscribe_bypass_model_ids" class="oe_inline"/>
                    <field name="autosubscribe_bypass_model_ids" options="{'no_create': True}">
                        <tree>
                            <field name="name"/>
                        </tree>
                    </field>
                </div>
            </div>
        </field>
    </record>
</odoo>
