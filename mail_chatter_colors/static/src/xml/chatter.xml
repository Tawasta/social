<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-extend="mail.widget.Thread.Message">
        <t t-jquery="div[t-att-data-message-id='message.getID()']">
            this.attr('t-att-data-message-system-subtype', "message.getSubtypeDescription()");
            this.attr('t-att-data-message-from-current-user', "message.isMyselfAuthor()");
            this.attr('t-att-data-message-is-starred', "message.isStarred()");
            this.attr('t-att-data-message-is-system-notification', "message.isSystemNotification()");
            this.attr('t-att-data-message-is-note', "message._isNote");
            this.attr('t-att-data-message-is-transient', "message._isTransient()");
            this.attr('t-att-data-message-has-tracking-values', "message.hasTrackingValues()");
            this.attr('t-att-data-oe-id', "message.shouldRedirectToAuthor() ? message.getAuthorID() : ''");
        </t>
    </t>
</templates>

